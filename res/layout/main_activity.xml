<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivityScrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top" >
      
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/mainActivityLinearLayout1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="top"
	    android:baselineAligned="false"
	    android:gravity="center|fill_vertical"
	    android:orientation="vertical"
	    android:weightSum="1" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="0dp"
		    android:layout_marginBottom="@dimen/main_activity_widget_margin_bottom"
		    android:layout_marginTop="@dimen/main_activity_widget_margin_top"
		    android:layout_weight="1" >

			<Button
			    android:id="@+id/instapicButton"
			    android:layout_width="@dimen/button_size"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="2dp"
			    android:layout_marginRight="2dp"
			    android:onClick="instapicButton"
			    android:text="@string/instapicButtonText" />

		    <Button
		        android:id="@+id/updateAllLevelsButton"
		        android:layout_width="@dimen/button_size"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:onClick="updateAllLevelsButton"
		        android:text="@string/updateAllLevelsButtonText" />

		    <Button
		        android:id="@+id/buzzButton"
		        android:layout_width="@dimen/button_size"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:onClick="buzzButton"
		        android:text="@string/buzzButtonText" />

		</LinearLayout>
	    
		<LinearLayout
		    android:id="@+id/drunkLevelLinearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/main_activity_widget_margin_top"
		    android:layout_marginLeft="@dimen/main_activity_widget_margin_left"		    
		    android:layout_marginRight="@dimen/main_activity_widget_margin_right"
		    android:layout_marginBottom="@dimen/main_activity_widget_margin_bottom"
		    android:orientation="vertical" >

		    <SeekBar
		        android:id="@+id/drunkLevelSeekBar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:max="@string/drunkLevelMax" />

		    <RelativeLayout
		        android:id="@+id/drunkLevelRelativeLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/main_activity_widget_margin"
		        android:layout_weight="1" >
		        <TextView
		            android:id="@+id/drunkLevelTextView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:text="@string/drunkLevelText" />

		        <Button
		            android:id="@+id/updateDrunkLevelButton"
		            android:layout_width="@dimen/button_size"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:onClick="updateDrunkLevelButton"
		            android:text="@string/updateDrunkLevelButtonText" />

		    </RelativeLayout>
		</LinearLayout>
	
		<LinearLayout
		    android:id="@+id/sleepyLevelLinearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/main_activity_widget_margin_top"
		    android:layout_marginLeft="@dimen/main_activity_widget_margin_left"		    
		    android:layout_marginRight="@dimen/main_activity_widget_margin_right"
		    android:layout_marginBottom="@dimen/main_activity_widget_margin_bottom"
		    android:orientation="vertical" >
		    <SeekBar
		        android:id="@+id/sleepyLevelSeekBar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:max="@string/sleepyLevelMax" />
		    <RelativeLayout
		        android:id="@+id/sleepyLevelRelativeLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/main_activity_widget_margin"
		        android:layout_weight="1" >
		        <TextView
		            android:id="@+id/sleepyLevelTextView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:text="@string/sleepyLevelText" />
		        <Button
		            android:id="@+id/updateSleepyLevelButton"
		            android:layout_width="@dimen/button_size"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:onClick="updateSleepyLevelButton"
		            android:text="@string/updateSleepyLevelButtonText" />
		    </RelativeLayout>
		</LinearLayout>	
		<LinearLayout
		    android:id="@+id/mwahLevelLinearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/main_activity_widget_margin_top"
		    android:layout_marginLeft="@dimen/main_activity_widget_margin_left"		    
		    android:layout_marginRight="@dimen/main_activity_widget_margin_right"
		    android:layout_marginBottom="@dimen/main_activity_widget_margin_bottom"
		    android:orientation="vertical" >			<SeekBar
		        android:id="@+id/mwahLevelSeekBar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:max="@string/mwahLevelMax" />
		    <RelativeLayout
		        android:id="@+id/mwahButtonsRelativeLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/main_activity_widget_margin"
		        android:layout_weight="1" >
		        <TextView
		            android:id="@+id/mwahLevelTextView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:text="@string/mwahLevelText" />
		        <Button
		            android:id="@+id/updateMwahLevelButton"
		            android:layout_width="@dimen/button_size"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:onClick="updateMwahLevelButton"
		            android:text="@string/updateMwahLevelButtonText" />
		    </RelativeLayout>
		</LinearLayout>
	
		<LinearLayout
		    android:id="@+id/huggleLevelLinearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/main_activity_widget_margin_top"
		    android:layout_marginLeft="@dimen/main_activity_widget_margin_left"		    
		    android:layout_marginRight="@dimen/main_activity_widget_margin_right"
		    android:layout_marginBottom="@dimen/main_activity_widget_margin_bottom"
		    android:orientation="vertical" >
		    <SeekBar
		        android:id="@+id/huggleLevelSeekBar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:max="@string/huggleLevelMax" />
		    <RelativeLayout
		        android:id="@+id/huggleLevelRelativeLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/main_activity_widget_margin"
		        android:layout_weight="1" >
		        <TextView
		            android:id="@+id/huggleLevelTextView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:text="@string/huggleLevelText" />
		        <Button
		            android:id="@+id/updateHuggleLevelButton"
		            android:layout_width="@dimen/button_size"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:onClick="updateSleepyLevelButton"
		            android:text="@string/updateHuggleLevelButtonText" />
		    </RelativeLayout>

		</LinearLayout>
		
	</LinearLayout>
	
</ScrollView>